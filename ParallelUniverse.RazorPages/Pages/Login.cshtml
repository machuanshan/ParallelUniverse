@page
@model ParallelUniverse.RazorPages.Pages.LoginModel

<h3>传送门开启，请先验证身份</h3>

<form method="post">

    <div class="form-group">
        <input id="userName"
               class="form-control"
               required
               placeholder="用户名"
               asp-for="UserName"/>
    </div>

    <div class="form-group">
        <input id="pwd"
               type="password"
               class="form-control"
               required
               placeholder="密码"
               asp-for="Password"/>
    </div>
    <button type="submit" class="btn btn-primary">进入</button>
</form>