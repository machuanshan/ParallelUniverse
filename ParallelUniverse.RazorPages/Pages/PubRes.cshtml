@page
@model ParallelUniverse.RazorPages.Pages.PubResModel
@{ 
    ViewData["Title"] = "发布资源";
}
<h2>发布资源</h2>

<form method="post">
    
    <div class="form-group">
        <label>资源名称</label>
        <input required class="form-control" asp-for="FileResource.Name" />
        <span asp-validation-for="FileResource.Name"></span>
    </div>

    <div class="form-group">
        <label>大小</label>

        @{
            var size = @Model.FileResource.Size / (1024 * 1024);
            <input class="form-control" readonly value="@(size)MB" />
        }
    </div>

    <button class="btn btn-primary" type="submit">保存</button>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>