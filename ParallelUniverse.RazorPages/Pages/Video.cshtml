@page
@model ParallelUniverse.RazorPages.Pages.VideoModel
@{
    ViewData["Title"] = Model.FileResource.Name;
}

<div style="text-overflow: ellipsis; overflow:hidden; white-space: nowrap" title="@Model.FileResource.Name">
    @Model.FileResource.Name
</div>
<br />
<video autoplay controls style="width:60%;height:60%">
    <source src="/VideoStream?file=@Uri.EscapeDataString(Model.FileResource.Path)" type="video/mp4" />
</video>