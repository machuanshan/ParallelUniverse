@page
@model puvideoModel
@{
    Layout = null;
}
<html>
<head>
    <title>@Model.FileResource.Name</title>
</head>
<body>
    <div style="text-overflow: ellipsis; overflow:hidden; white-space: nowrap" title="@Model.FileResource.Name">
        @Model.FileResource.Name
    </div>
    <div>
        @Model.FileResource.CreationDate.ToLocalTime().ToLongDateString()
    </div>
    <br />
    <video autoplay controls style="width:60%;height:60%">
        <source src="/puvideostream?key=@Model.Key" type="video/mp4" />
    </video>
</body>
</html>