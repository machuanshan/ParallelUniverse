@page "/fetchdata"
@inject HttpClient Http

<h1>Videos</h1>

@if (_videos == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in _videos)
            {
                <tr>
                    <td>@v.Name</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private VideoInfo[] _videos;

    protected override async Task OnInitializedAsync()
    {
        _videos = await Http.GetFromJsonAsync<VideoInfo[]>("video");
    }
}
